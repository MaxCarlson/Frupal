{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
          "-g", 
          "-std=c++17",
          "${workspaceRoot}/main.cpp",
          "${workspaceRoot}/camera.cpp",
          "${workspaceRoot}/input.cpp",
          "${workspaceRoot}/item.cpp",
          "${workspaceRoot}/player.cpp",
          "${workspaceRoot}/ui.cpp",
          "-lncurses",
          "-Wall",
          "-Werror",
          "-o", 
          "${workspaceRoot}/main"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }